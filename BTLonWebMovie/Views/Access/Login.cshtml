@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ModelAccess.ViewModel.UserView;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/GlobalAssets/style.css" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
              @*  <form method="post" class="sign-in-form">*@
                   
                    @using (Html.BeginForm("Login", "Access", FormMethod.Post, new {@class ="sign-in-form"}))
                    {
                        <h2 class="title">Sign in</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                        @Html.TextBoxFor(x => x.Email,new {@class = "form-control"
                    , placeholder="Email", required = "required", autofocus = "autofocus"} )
                            @*<input type="text" name="Email" placeholder="Username" class="form-control" required />*@
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            @Html.TextBoxFor(x => x.Password, new {@class = "form-control form-control-user ",type = "password",placeholder="Password",
                            required = "required"})
                            @*<input type="password" name="Password" placeholder="Password" class="form-control" required />*@
                        </div>
                        @if (ViewBag.Error != null)
                        {
                            <span class="badge badge-danger" style="color: red">@ViewBag.Error</span>
                        }
                        @* <input type="submit" value="Login" class="btn solid" />*@
                        <button type="submit" class="btn solid">Login</button>                      
                        <p class="social-text">Or Sign in with social platforms</p>
                        <div class="social-media">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-google"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
						}
                  @* </form> *@
   
                @using (Html.BeginForm("Register", "Access", FormMethod.Post, new {@class="sign-up-form"}))
                {
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        @Html.TextBoxFor(x => x.UserName , new {@class = "form-control"
                    , placeholder="Username", required = "required", autofocus = "autofocus"} )
                        @*<input type="text" placeholder="Username" />*@
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        @Html.TextBoxFor(x => x.Email , new {@class = "form-control"
                        , placeholder="Email", required = "required"} )                       
                        @*<input type="email" placeholder="Email" />*@
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        @Html.TextBoxFor(x => x.Password, new {type = "password",placeholder="Password",
                    required = "required"})
                        @*<input type="password" placeholder="Password" />*@
                    </div>
                    <input type="submit" class="btn" value="Sign up" />
                    <p class="social-text">Or Sign up with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                        ex ratione. Aliquid!
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/GlobalAssets/img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                        laboriosam ad deleniti.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/GlobalAssets/img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/GlobalAssets/app.js"></script>
</body>
</html>